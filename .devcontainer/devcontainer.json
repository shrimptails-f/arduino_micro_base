{
    "name": "Arduino Micro Base",
    "dockerComposeFile": "docker-compose.yml",
    "service": "arduino",
    "workspaceFolder": "/home/dev/src",
    "postCreateCommand": "task setup",
    "customizations": {
        "vscode": {
            "extensions": [
                "editorconfig.editorconfig", // エディタを跨いだ共通設定ファイルをVsCodeで実行するのに必要
                "ms-azuretools.vscode-docker", // VsCodeでのIntelliSenseやタブ補完用
                "mosapride.zenkaku", // 全角ハイライト
                "streetsidesoftware.code-spell-checker", // タイポチェック
                "ms-vscode.cpptools-extension-pack", // C/C++の人気拡張機能セット リンタ デバッガが含まれている
                "xaver.clang-format", // フォーマッタ
                "vscode-arduino.vscode-arduino-community" // ボード/ライブラリマネージャ、スケッチのビルド&アップロード
            ]
        }
    }
}